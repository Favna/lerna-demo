{
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "version": "independent",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "conventionalCommits": true,
      "push": true
    },
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "push": true,
      "message": "chore(release): publish"
    },
    "create": {
      "homepage": "https://github.com/RWS-NL/air-node-packages",
      "license": "AGPL-3.0-or-later",
      "keywords": [
        "rws-air",
        "rws-nl",
        "rws",
        "air",
        "typescript",
        "ts"
      ]
    }
  }
}
